- if logged_in?
  %h2 Post a feature or issue
  - form_for @post, :id => "new_post" do |f|
    %fieldset
      %ol
        %li= f.text_area :body, :rows => 5
        %li= f.submit "Post Case"

%h2
  - if params[:tags].empty?
    Recent Posts
  - else
    = "All cases matching #{params[:tags].join(", ")}"

%ul#posts
  = render :partial => "post", :collection => @posts

= will_paginate @posts, :previous_label => "Previous Page", :next_label => "Next Page"
